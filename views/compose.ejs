<%- include('partials/header'); -%>



    <h1>COMPOSE</h1>
    <br>
    <form action="/compose" method="post">
        <div class="form-group">
            <label for="">Title</label>
            <input class="form-control" type="text" placeholder="Day 1" name="postTitle">
        </div>

        <div class="form-group">
            <label for="exampleFormControlTextarea1">Post</label>
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="7" placeholder="Something about today"
                name="postBody"></textarea>
        </div>
        <div class="col-auto my-1">
            <button type="submit" class="btn btn-primary" name="button">Publish</button>
        </div>
    </form>



    <%- include('partials/footer'); -%>